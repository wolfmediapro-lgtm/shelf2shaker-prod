rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /cocktails/{cocktailId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
